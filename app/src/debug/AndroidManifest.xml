<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="net.squanchy">

  <application>

    <activity
      android:name="net.squanchy.DebugActivity"
      android:theme="@style/Theme.Squanchy.PrimaryStatusBar"
      android:label="@string/debug_activity_title" />

    <activity-alias
      android:name="net.squanchy.ZZZZDebugActivity"
      android:targetActivity="net.squanchy.DebugActivity">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

  </application>

</manifest>
